/**index.wxss**/

.slider, .swiper, .swiper-item, .slider image {
    width: 100%;
    height: 399rpx;
    /* 或者使用display:block; */
}

.index-nav {
    display: flex;
    flex-wrap: wrap;
}

.index-nav > .nav-item {
    width: 33.33333%;
    height: 266rpx;
    box-sizing: border-box;
    /* border-right:1rpx solid #ccc; */
    border-bottom: 1rpx solid #ccc;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    /*微信小程序的字号大小官方推荐使用px */
    font-size: 14px;
}

/* 利用伪类来解决边框问题 */

.index-nav > .nav-item:nth-of-type(3n)::before {
    width: 0;
}

.index-nav image {
    width: 80rpx;
    height: 80rpx;
}

/* index-enter */

.index-enter {
    padding: 20rpx 30rpx;
    display: flex;
}

.index-enter > .enter-item {
    flex: 1;
    display: flex;
    justify-content: center;
    border-radius:30rpx;
}

.index-enter > .enter-item > image {
    width: 320rpx;
    height: 178rpx;
}
