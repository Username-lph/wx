/* pages/shoplist/shoplist.wxss */
page{
    background-color: #fff;
}
.shop{
    padding:20rpx;
    border-bottom:1rpx solid #ddd;
    display:flex;
    position:relative;
}
.shop > .shop-img{
    width:160rpx;
    height:160rpx;
}
.shop > .shop-info{
    width:520rpx;
    display:flex;
    flex-direction: column;
    font-size:12px;
    padding-left:30rpx;
    color:#666;
    line-height:1.5;
}
.shop > .shop-info > .shop-title{
    font-size:16px;
    font-weight:bold;
    color:#333;
    width:380rpx;
}
.shop > .shop-star{
    position:absolute;
    right:20rpx;
}
