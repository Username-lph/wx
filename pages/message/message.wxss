/* pages/message/message.wxss */
page{
    background-color:#f1f1f1;
}
.card{
    background-color: #fff;
    border:1rpx solid #ddd;
    border-radius:15rpx;
    margin:60rpx 20rpx;
    padding:20rpx 30rpx;
    display:flex;
    flex-direction:column;
}
.card > .card-title{
    font-size:20px;
    font-weight:bold;
    margin-bottom:20rpx;
}
.card > .card-date{
    font-size:16px;
    color:#999;
    padding-bottom:15rpx;
    border-bottom:1rpx solid #ddd;
    margin-bottom:20rpx;
}

.card > .card-img{
    width:100%;
    height:300rpx;
}
.card > text:nth-last-of-type(-n+2){
    font-size:16px;
    color:#333;
    padding:15rpx 0;
}
.card > text:nth-last-of-type(2){
    border-bottom:1rpx solid #ddd;
}
.card > text:nth-last-of-type(1){
    font-size:14px;
    margin:15rpx 0;

}
